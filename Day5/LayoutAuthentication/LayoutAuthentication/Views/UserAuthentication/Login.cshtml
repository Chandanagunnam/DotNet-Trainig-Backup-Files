
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MyShowLayout.cshtml";
}

<h2>Login</h2>


@using (Html.BeginForm())
{
    @Html.Label("UserName")
    @Html.TextBox("txtuname")
    <br />
    @Html.Label("UserPassword")
    @Html.TextBox("txtpwd")
    <br />

    <input type="submit" value="Login" />
}
